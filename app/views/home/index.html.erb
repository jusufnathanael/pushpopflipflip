<% if current_user %>
    <div class="titleBloc">
        <h1><strong>Hello, <%= current_user.name %>!</strong></h1>
    </div>

    <%= link_to 'Edit user', edit_user_registration_path, class:"btn btn-dark"%>    
    <%= link_to 'Log out', destroy_user_session_path,
        method: :delete, class:"btn btn-danger" %><br><br>
    <%= render 'notifications' %>

<% else %>
    <div class="titleBloc">
        <h1><strong>Welcome!</strong></h1>
    </div>

    <%= link_to 'Sign up', new_user_registration_path , class:"btn btn-primary"%>
    <%= link_to 'Log in', new_user_session_path , class:"btn btn-danger"%>

<% end %>